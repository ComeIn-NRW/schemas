{
  "$id": "https://comein-nrw.github.io/schemas/draft/author.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Verantwortliche Person(en) und/oder Institution(en)",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "title": "Type",
        "type": "string",
        "enum": [
          "Person",
          "Organization"
        ]
      },
      "id": {
        "title": "URL",
        "type": "string",
        "format": "uri"
      },
      "name": {
        "title": "Name",
        "type": "string"
      }
    },
    "required": [
      "name",
      "type"
    ]
  }
}
